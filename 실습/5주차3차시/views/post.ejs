<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>
<body>
    <h4>POST 로그인</h4>
    <form name="register">
        <fieldset>
            <legend>성별</legend>
            <span>아이디 <input type="text" name="idid"></span>
            <br />
            <span>비밀번호 <input type="password" name="pwpw"></span>
        </fieldset>
        <button type="button" onclick="axiosPost()">axios post 로그인</button>
    </form>

    <br />
    <div class="result"></div>

    <script>
        const resultBox = document.querySelector('.result');
        
        async function axiosPost() {
            console.log('axios post');
            const form = document.forms['register'];
            const data = {
                idid: form.idid.value,
                pwpw: form.pwpw.value,
            };
            const res = await axios({
                method: 'POST',
                url: '/axios',
                data,
            });
            console.log(res.data)
            if(res.data === true) {
                resultBox.textContent = `로그인 성공`;
                resultBox.style.color = 'blue';
            } else {
                resultBox.textContent = `로그인 실패`;
                resultBox.style.color = 'red';
            } 
        }
    </script>
</body>
</html>